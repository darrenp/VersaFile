/* Color Definitions */
.bfreeDark{
	color: #336699;
}
.bfreeLight{
	color: #78CCFF;
}

.bfreeBackgroundLight{
    color: #CDECFE;
}

div#zone{
	font-size: 1.4em;
	font-variant:small-caps;
	font-weight: bold;
	left:16px;
	position: absolute;
	top:-64px;
	white-space:nowrap;
}

span#zoneName{
    position: relative;
    top: -0.5em;
}

div#content{
	margin-left: -128px;
	position: absolute;
	top: -102px;
	left: 50%;
}

div#horizon{
    background-color: #78CCFF;
	text-align: center;
	position: absolute;
	top:196px;
	left: 0px;
	width: 100%;
	height: 1px;
	overflow: visible;
	visibility: visible;
	display: block;;
    padding:  0 32px 0 3px;
}

div#version{
	position: absolute;
	top:-16px;	
	right:56px;
	font-size:x-small;
}

/* BrowserIcons */
.browserIcon{
    height:32px;
    width:32px;
    display:table-cell;
}

.browserChrome,
.browserFF,
.browserOpera,
.browserSafari,
.browserIE{
    background-image:url('sprites/browser.32.png');
}

.browserChrome { background-position: 0px; }
.browserFF { background-position: -32px; }
.browserOpera { background-position: -64px; }
.browserSafari { background-position: -96px; }
.browserIE { background-position: -128px; }
