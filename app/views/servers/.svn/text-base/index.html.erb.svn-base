<h1>Listing servers</h1>

<table>

<% @servers.each do |server| %>

  <tr>
    <th colspan="4"><%= server.name %></th>
  </tr>
  <tr>
    <td style="width:1px"><%= link_to 'Show', server %></td>
    <td style="width:1px"><%= link_to 'Edit', edit_server_path(server) %></td>
    <td style="width:1px"><%= link_to 'Destroy', server, confirm: 'Are you sure?', method: :delete %></td>
    <td>&nbsp;</td>
  </tr>

<% end %>
</table>

<br />

<%= link_to 'New Server', new_server_path %>
