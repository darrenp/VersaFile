<h1>Listing zone_nodes</h1>

<table>
 <% @zone_nodes.each do |zone_node| %>
  <tr>
     <th colspan="4"><%= zone_node.name %>[<%= zone_node.subdomain %>]</th>
  </tr>
  <tr>
     <td colspan="4"><a href="<%= zone_node.zone_url %>" target="_blank"><%= zone_node.zone_url %></a></td>
  </tr>
      <tr>
     <td colspan="4"><a href="<%= zone_node.url %>" target="_blank"><%= zone_node.url %></a></td>
  </tr>
  <tr>
    <td style="width:1px"><%= link_to 'Show', zone_node %></td>
    <td style="width:1px"><%= link_to 'Edit', edit_account_zone_node_path(@account, zone_node) %></td>
    <td style="width:1px"><%= link_to 'Destroy', zone_node, confirm: 'Are you sure?', method: :delete %></td>
    <td>&nbsp;</td>
  </tr>
<% end %>
</table>

