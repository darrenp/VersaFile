<h1>Listing accounts</h1>

<table>

<% @accounts.each do |account| %>
  <tr>
    <th colspan="4"><%= account.name %></th>
  </tr>
  <tr>
    <td style="width:1px"><%= link_to 'Show', account %></td>
    <td style="width:1px"><%= link_to 'Edit', edit_account_path(account) %></td>
    <td style="width:1px"><%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
    <td>&nbsp;</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Account', new_account_path %>
